# Normalize line endings for text files
* text=auto eol=lf

# Treat common binary files as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
*.pdf binary

# Lock files should use LF
package-lock.json text eol=lf
pnpm-lock.yaml text eol=lf
yarn.lock text eol=lf

# Ensure shell and scripts are LF
*.sh text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Markdown and docs
*.md text eol=lf
*.mdx text eol=lf

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
