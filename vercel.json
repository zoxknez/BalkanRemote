{
  "buildCommand": "npm run build:classic",
  "outputDirectory": ".next", 
  "framework": "nextjs",
  "regions": ["fra1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "balkan-remote.com" }],
      "destination": "https://www.balkan-remote.com/:path*",
      "permanent": true
    },
    {
      "source": "/tax-guide",
      "destination": "/poreski-vodic",
      "permanent": true
    },
    {
      "source": "/salary-calculator",
      "destination": "/poreski-vodic",
      "permanent": true
    },
    {
      "source": "/smart-match",
      "destination": "/resursi", 
      "permanent": false
    },
    {
      "source": "/toolbox",
      "destination": "/alati",
      "permanent": false
    }
  ],
  "crons": [
    {
      "path": "/api/scrape-all",
      "schedule": "0 */12 * * *" 
    }
  ]
}
